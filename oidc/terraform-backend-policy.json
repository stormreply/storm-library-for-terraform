{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject"
            ],
            "Resource": "arn:aws:s3:::storm-github-terraform-backend/*",
            "Effect": "Allow",
            "Sid": "BackendObjectAccess"
        },
        {
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": "arn:aws:s3:::storm-github-terraform-backend",
            "Effect": "Allow",
            "Sid": "BackendBucketAccess"
        }
    ]
}
